            <EditText
                android:id="@+id/login_register_frg_edtphone"
                style="@style/comm_subtitle_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/icon_login_phone"
                android:drawablePadding="@dimen/layout_padding_ml"
                android:hint="@string/login_username_hint"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true" />

            <View
                style="@style/line_horStyle"
                android:layout_marginBottom="@dimen/layout_margin_l"
                android:layout_marginTop="@dimen/layout_margin_l" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/login_register_frg_edtcode"
                    style="@style/comm_subtitle_black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/icon_code"
                    android:drawablePadding="@dimen/layout_padding_ml"
                    android:hint="@string/login_code_hint"
                    android:imeOptions="actionGo"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/login_register_frg_tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/comm_frame_pink_bg"
                    android:text="@string/txt_getMsgCode_validate"
                    android:textColor="@color/registration_pink" />
            </LinearLayout>

