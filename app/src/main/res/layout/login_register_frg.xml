        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_ml"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/login_main_frg_cb_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
