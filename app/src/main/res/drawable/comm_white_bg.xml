<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/comm_white_bg_press" android:startColor="@color/comm_white_bg_press" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/comm_white_bg_press" android:startColor="@color/comm_white_bg_press" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/comm_white_bg_normal" android:startColor="@color/comm_white_bg_normal" />
        </shape>
    </item>

</selector>