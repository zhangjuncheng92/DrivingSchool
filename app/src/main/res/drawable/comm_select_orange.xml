<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:endColor="@color/google_yellow" android:startColor="@color/google_yellow" />

            <corners android:radius="@dimen/layout_margin_ls" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:endColor="@color/comm_orange" android:startColor="@color/comm_orange" />
            <corners android:radius="@dimen/layout_margin_ls" />
        </shape>
    </item>

</selector>